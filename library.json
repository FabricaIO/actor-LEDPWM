{
	"name": "actor-LEDPWM",
	"version": "0.5.0",
	"description": "Controls LEDs with the LEDC interface via PWM",
	"keywords": "Fabrica-IO, actor, led, pwm, output",
	"repository":
	{
	  "type": "git",
	  "url": "https://github.com/FabricaIO/actor-LEDPWM.git"
	},
	"authors":
	[
	  {
		"name": "Sam Groveman",
		"email": "SamGroveman@outlook.com",
