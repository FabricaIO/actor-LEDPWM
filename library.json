	  }
	],
	"dependencies": {
	  },
	"license": "GPLv3",
	"homepage": "https://github.com/FabricaIO",
	"frameworks": "arduino",
	"platforms": "*",
	"fabricaio" : {
		"name": "LEDPWMControl",
		"type": 1,
		"category": "light",
		"libname": "LEDPWM",
		"includes": ["LEDPWM"],
		"description": "Controls LEDs or other devices with the LEDC interface via PWM",
		"constructor": 
		[
			[
				{
					"name": "Pin",
					"type": "int",
					"description": "The pin to use",
					"default": ""
				},
				{
					"name": "ledcChannel",
					"type": "int",
					"description": "The LEDc channel to use",
					"default": "0"
				},
				{
					"name": "Configfile",
					"type": "String",
					"description": "The file name to store settings in",
					"default": "LEDPWM.json"
				}
			]
		]
	}
  }